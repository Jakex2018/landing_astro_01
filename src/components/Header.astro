---
import NavLinks from "../models/NavLinks";
import { Icon } from "astro-icon/components";
---

<header class="relative w-full md:h-[120vh] h-[200vh] bg-white">
    <nav
        id="navbar"
        class="fixed flex flex-grow items-center gap-10 md:w-[75%] w-[85%] m-8 z-40 px-3 ml-[10%]"
    >
        <div class="hidden lg:flex flex-grow items-center gap-[20px]">
            <img src="/asset/logo.webp" class="h-[50px]" alt="" />
            {
                NavLinks.map((item) => (
                    <span class="font-bold ml-7 hover:opacity-35 transition-all duration-200 cursor-pointer">{item.title}</span>
                ))
            }
        </div>
        <div class="flex flex-grow items-center gap-6">
            <button
                class="hover:scale-105 shadow-lg duration-200 px-5 py-3 bg-[#DAE952] rounded-[20px] font-medium text-black"
                >Special Offer</button
            >
            <div class="flex items-center">
                <Icon name="mdi:call" />
                <span>+923351263561</span>
            </div>
        </div>
        <div class="flex gap-8 cursor-pointer hover:opacity-65 duration-200">
            <div
                class="flex items-center rounded-full border-2 border-black p-1"
            >
                <Icon name="mdi:user" />
            </div>
            <div
                class="relative cursor-pointer hover:opacity-65 duration-200 flex items-center rounded-full border-2 border-black p-1"
            >
                <Icon name="mdi:cart" />
                <div
                    class="absolute -top-2 -right-2 rounded-full h-4 w-4 text-white flex justify-center items-center text-[10px] bg-black"
                >
                    4
                </div>
            </div>
        </div>
    </nav>
    <div class="absolute right-0 top-0 z-0">
        <img src="/asset/item01.webp" class="h-[200vh]" alt="" />
        <div
            class="absolute right-0 top-[30%] h-[135px] rounded-[10px] w-[45px] z-60 bg-white flex flex-col items-center justify-center gap-2"
        >
            <Icon
                class="text-[25px] opacity-35 cursor-pointer"
                name="mdi:facebook"
            />
            <Icon
                class="text-[25px] opacity-35 cursor-pointer"
                name="mdi:twitter"
            />
            <Icon
                class="text-[25px] opacity-35 cursor-pointer"
                name="mdi:instagram"
            />
        </div>
    </div>
    <div
        class="absolute left-[10%] top-[35%] hidden lg:flex flex-col animate-slide-in-left items-start"
    >
        <span class="text-[60px] leading-[70px] mb-4"
            >All Delicious<br /><strong>Asian</strong></span
        >
        <p class="font-medium">Eggs, Salad, fruits, pasta</p>
        <button
            class="hover:scale-105 duration-200 mt-8 px-5 py-3 bg-[#DAE952] rounded-[20px] font-medium text-black"
            >Find for more</button
        >
    </div>
    <div class="absolute right-[10%] top-[15%] animate-fade-in px-5">
        <img
            src="/asset/salad01.webp"
            class="object-cover w-[600px] h-[600px]"
            alt=""
        />
    </div>
</header>
